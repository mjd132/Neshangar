<Window x:Class="Neshangar.Windows.Connect"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:Neshangar.Windows"
        mc:Ignorable="d"
        Title="Authenticate" Height="250" Width="300">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">


            <StackPanel Grid.Column="0">
                <Label Content="Server IP:" FontSize="16" />
                <TextBox x:Name="ServerUrlTextBox" Width="auto" FontSize="14" />
            </StackPanel>

            <Label Content="Enter your name:" FontSize="16" Margin="0,10,0,10" />
            <TextBox x:Name="NameTextBox" Width="200" FontSize="14" Margin="0,0,0,10" />
            <Button x:Name="SubmitButton" Content="Submit" Width="100" FontSize="14" Click="SubmitButton_Click" />
        </StackPanel>
    </Grid>
</Window>